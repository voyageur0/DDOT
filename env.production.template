# Configuration de production pour DDOT sur Informaniak
# IMPORTANT: Copiez ce fichier vers .env et modifiez les valeurs

# Configuration OpenAI (OBLIGATOIRE)
OPENAI_API_KEY=sk-votre-clé-openai-ici

# Configuration serveur
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://votre-domaine.infomaniak.ch

# Configuration CORS
CORS_ORIGIN=https://votre-domaine.infomaniak.ch

# Configuration session (générez une clé secrète forte)
SESSION_SECRET=votre-session-secret-très-fort-ici

# Configuration base de données
DATABASE_URL=sqlite:./urban_analysis.db

# Configuration Flask Python
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=votre-flask-secret-key-ici

# Configuration Stripe (si utilisé)
STRIPE_SECRET_KEY=sk_live_votre-clé-stripe-ici
STRIPE_PUBLISHABLE_KEY=pk_live_votre-clé-publique-stripe-ici

# Configuration SSL/TLS
HTTPS_ENABLED=true

# Configuration uploads
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# Configuration OCR
OCR_LANGUAGE=fra+eng
TESSDATA_PREFIX=./

# Configuration cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configuration logs
LOG_LEVEL=info
LOG_FILE=./logs/application.log

# Configuration email (si utilisé)
# SMTP_HOST=mail.infomaniak.com
# SMTP_PORT=587
# SMTP_USER=votre-email@votre-domaine.ch
# SMTP_PASS=votre-mot-de-passe-email

# Configuration géolocalisation
# Ces services sont gratuits mais peuvent nécessiter une clé API
GEOADMIN_API_URL=https://api3.geo.admin.ch
RDPPF_API_URL=https://rdppfvs.geopol.ch

# Configuration sécurité
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Configuration monitoring
MONITORING_ENABLED=true

# Configuration proxy (si derrière un reverse proxy)
TRUST_PROXY=true 