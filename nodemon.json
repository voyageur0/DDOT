{
  "watch": [
    "src/**/*.ts",
    "src/**/*.js",
    "routes-node/**/*.js",
    "models-node/**/*.js",
    "services-node/**/*.js",
    "public/**/*.css",
    "public/**/*.js",
    "server.js"
  ],
  "ext": "ts,js,json,css",
  "ignore": [
    "node_modules/**",
    "dist/**",
    "tests/**",
    "e2e/**",
    "*.test.ts",
    "*.test.js",
    ".git/**",
    "logs/**",
    "uploads/**",
    "cache/**"
  ],
  "exec": "ts-node --transpile-only ./src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 300,
  "verbose": false,
  "restartable": "rs",
  "legacyWatch": false,
  "signal": "SIGTERM",
